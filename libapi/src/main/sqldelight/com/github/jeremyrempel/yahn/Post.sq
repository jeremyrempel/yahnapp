CREATE TABLE post (
    id INTEGER NOT NULL PRIMARY KEY,
    rank INTEGER NOT NULL,
    title TEXT NOT NULL,
    text TEXT,
    domain TEXT,
    url TEXT,
    points INTEGER NOT NULL,
    unixTime INTEGER NOT NULL,
    commentsCnt INTEGER NOT NULL
);

CREATE INDEX post_rank ON post(rank);

insert:
INSERT OR REPLACE INTO post (id, rank, title, text, domain, url, points, unixTime, commentsCnt)
VALUES ?;

selectPosts:
SELECT * FROM post ORDER BY rank ASC;